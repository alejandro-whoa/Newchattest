{
  "name": "multimodal-chat",
  "version": "1.0.0",
  "description": "A multimodal chat interface with Tailwind, HTML5, WebGL, and streaming responses",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "build:css": "tailwindcss -i ./src/styles.css -o ./public/css/tailwind.css --watch",
    "dev": "concurrently \"npm run start\" \"npm run build:css\""
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "tailwindcss": "^3.3.0"
  }
}
